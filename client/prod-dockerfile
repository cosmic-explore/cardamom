# Build stage
FROM node:18 AS build

WORKDIR /app
COPY . .
RUN npm install
RUN npm run build

# Production stage for a much smaller final image
FROM node:18-alpine

# Install a static file server
RUN npm install -g serve

WORKDIR /app

# Copy only the built assets, not source
COPY --from=build /app/dist ./dist

# Expose port
EXPOSE 5173

# Serve the app
CMD ["serve", "-s", "dist", "-l", "tcp://0.0.0.0:5173"]